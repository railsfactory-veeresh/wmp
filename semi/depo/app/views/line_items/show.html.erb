<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

 <h2>Your Cart</h2>
 <table>
 	    <% @arr = Array.new %>
       <% current_user.line_items.each do |item| %>
       
      <tr>
         <td><%= item.product.title %></td>
         <td class="item_price"><%= number_to_currency(item.product.price) %></td>
         
         <% @arr << item.product.price %>
     </tr>
   <% end %>
         <% $sum = @arr.sum %>
      <tr class="total_line">

      <td colspan="2">Total</td>

      <td class="total_cell"><%= number_to_currency($sum) %></td>

     </tr>
 
 </table>
   



   <%= link_to "Checkout", new_order_path, :method => :get %>
  <%= button_to 'Empty cart', @line_item, :method => :delete,data: { confirm: 'Are you sure?' } %>
   <%= link_to 'continu_shopping', '/' %>